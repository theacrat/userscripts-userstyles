{
	"name": "userscripts-userstyles",
	"type": "module",
	"scripts": {
		"format": "prettier . --write --ignore-unknown",
		"lint": "eslint . --fix",
		"lint:style": "stylelint '**/*.less' --fix",
		"prepare": "husky"
	},
	"lint-staged": {
		"**/*.js": [
			"bun lint"
		],
		"**/*.less": [
			"bun lint:style"
		],
		"**/*": [
			"bun format"
		]
	},
	"dependencies": {
		"@eslint/eslintrc": "^3.3.1",
		"@eslint/js": "^9.39.1",
		"bunx": "^0.1.0",
		"eslint-config-prettier": "^10.1.8",
		"globals": "^16.5.0",
		"stylelint": "^16.25.0"
	},
	"devDependencies": {
		"@types/bun": "^1.3.2",
		"eslint": "^9.39.1",
		"husky": "^9.1.7",
		"lint-staged": "^15.5.2",
		"prettier": "3.5.3",
		"stylelint-config-clean-order": "^7.0.0",
		"stylelint-config-standard-less": "^3.0.1"
	}
}
